{
    "name": "@anthill/hello-world",
    "version": "1.0.0",
    "description": "Minimal app using @anthill",
    "main": "dist/src/main.js",
    "scripts": {
        "get": "cdktf get",
        "build": "tsc && npm run post-build",
        "post-build": "npm run post-build:npm",
        "post-build:npm": "lerna bootstrap --scope ${npm_package_name} -- --omit=dev && cp --recursive --dereference node_modules dist",
        "synth": "cdktf synth",
        "deploy": "npm run build && npm run destroy && cdktf deploy --auto-approve && npm run deploy:smoke-test",
        "deploy:smoke-test": "curl localhost:8080/v1/hello | jq .",
        "destroy": "npm run docker:clean ; cdktf destroy --auto-approve || true",
        "docker:clean": "docker container ls --all --format '{{ json . }}' | jq -sr '.[] | select(.Image | contains(\"hello-world\")) | .ID' | xargs --no-run-if-empty docker container rm || true",
        "compile": "tsc --pretty && npm run post-build",
        "watch": "tsc --watch --pretty && npm run post-build",
        "test": "jest",
        "test:watch": "jest --watch",
        "upgrade": "npm i cdktf@latest cdktf-cli@latest",
        "upgrade:next": "npm i cdktf@next cdktf-cli@next",
        "draw": "npm run build >&2 && node dist/src/vis.js"
    },
    "keywords": [
        "docker",
        "cloud"
    ],
    "author": "dooreelko",
    "license": "LGPL-3.0",
    "engines": {
        "node": ">=14.0"
    },
    "dependencies": {
        "@anthill/core": "*",
        "@anthill/local-docker": "*",
        "@cdktf/provider-docker": "^0.8.36",
        "@cdktf/provider-null": "^0.7.35",
        "cdktf": "^0.11.2",
        "constructs": "^10.1.48"
    },
    "devDependencies": {
        "@anthill/vis": "*"
    }
}